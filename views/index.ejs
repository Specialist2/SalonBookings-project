<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SalonBookings</title>
    <link rel="stylesheet" href="css/main.css" />
  </head>

  <%- include("header.ejs") %>
  <body>
    <section class="hero-section">
      <div class="hero-text">
        <h2>
          Get the Perfect Look, <br />Book Your<br />
          Appointment Today
        </h2>
        <button class="cta">
          <a href="/services" style="color: white; text-decoration: none"
            >Book Appointment Now</a
          >
        </button>
        <% if (typeof success !== 'undefined') { %>
        <div class="success-message"><%= success %></div>
        <% } %>
      </div>
    </section>
    <section class="services">
      <h2>Our Services</h2>
      <div class="services-list">
        <div class="facials">
          <h3>Hair Styling</h3>
          <p>
            Get a trendy haircut or a stylish blow-dry to enhance your look.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Makeup</h3>
          <p>
            Professional makeup services for weddings, parties, and special
            occasions.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Facials</h3>
          <p>
            Rejuvenate your skin with our range of relaxing and nourishing
            facials.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Nail Art</h3>
          <p>
            Creative and beautiful nail art designs to complement your style.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Massage Therapy</h3>
          <p>Relax and unwind with our therapeutic massage sessions.</p>
          <button>learn more</button>
        </div>
      </div>
    </section>

    <section>
      <div class="gallery">
        <div>
          <img src="./images/pic9.jpg" alt="" />
          <h3>kesh 1500</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic8.jpg" alt="" />
          <h3>kesh2000</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic7.jpg" alt="" />
          <h3>kesh800</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic6.jpg" alt="" />
          <h3>kesh1500</h3>
          <button type="submit">Book</button>
        </div>
      </div>
    </section>

    <section class="general">
      <h1>How it Works</h1>
      <div class="it-works">
        <div class="try-on">
          <img src="./images/serricon.webp" alt="" />
          <p>1 Select Service</p>
        </div>

        <div class="arrow-icon">
          <img src="images/arrrow-removebg-preview.png" alt="" />
        </div>
        <div class="try-on">
          <img src="./images/calendar icon.png" alt="" />
          <p>3 Pick Date&Time</p>
        </div>
        <div class="arrow-icon">
          <img src="images/arrrow-removebg-preview.png" alt="" />
        </div>
        <div class="try-on">
          <img src="./images/tickicon.webp" alt="" />
          <p>4 Confirm Booking</p>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer>
      <div>
        <p>Special Offer <span>20% Off Your First Visit</span></p>
        <button>
          <a href="/services" style="color: white; text-decoration: none"
            >Book Now</a
          >
        </button>
        <%- include("footer") %>
      </div>
    </footer>

    <script src="js/script.js"></script>
  </body>
</html>
