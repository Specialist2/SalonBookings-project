<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SalonBookings</title>
    <link rel="stylesheet" href="css/main.css" />
  </head>
  <style>
    #guest-fields input {
      border: none;
      padding: 20 20px;
      border-radius: 5px;
      text-align: center;
      display: inline-block;
    }
  </style>
  <%- include("header.ejs") %>
  <body>
    <section class="hero-section">
      <div class="hero-text">
        <h2>
          Get the Perfect Look, <br />Book Your<br />
          Appointment Today
        </h2>

        <% if (typeof success !== 'undefined') { %>
        <div class="success-message"><%= success %></div>
        <% } %>

        <form class="booking-form" action="/preview" method="POST">
          <div>
            <label for="service"><h3>Service</h3></label>
            <select id="service" name="service" required>
              <option value="">Choose Service</option>
              <option value="Facial">Facial</option>
              <option value="Massage">Massage</option>
              <option value="Pedicures">Pedicures</option>
            </select>
          </div>
          <div>
            <label for="date"> <h3>Date</h3></label>
            <input type="date" id="date" name="date" required />
          </div>
          <div>
            <label for="time"> <h3>Time</h3></label>
            <select id="time" name="time" required>
              <option value="">Choose Time</option>
              <option>8:00 AM</option>
              <option>8:30 AM</option>
              <option>9:00 AM</option>
              <option>9:30 AM</option>
              <option>10:00 AM</option>
              <option>10:30 AM</option>
              <option>11:00 AM</option>
              <option>11:30 AM</option>
              <option>12:00 PM</option>
              <option>12:30 PM</option>
              <option>1:00 PM</option>
              <option>1:30 PM</option>
              <option>2:00 PM</option>
              <option>2:30 PM</option>
              <option>3:00 PM</option>
              <option>3:30 PM</option>
              <option>4:00 PM</option>
              <option>4:30 PM</option>
              <option>5:00 PM</option>
              <option>5:30 PM</option>
            </select>
          </div>

          <% if (!isLoggedIn) { %>
          <div id="guest-fields" style="margin-top: 10px">
            <p>
              <strong>Please enter your details to complete booking:</strong>
            </p>
            <input type="text" name="name" placeholder="Full Name" required />
            <input
              type="email"
              name="email"
              placeholder="Your Email"
              required
            />
            <input
              type="tel"
              name="phone"
              placeholder="Your Phone Number"
              required
            />
          </div>
          <% } %>

          <button type="submit">Book Your Appointment</button>
        </form>
      </div>
    </section>
    <section class="services">
      <h2>Our Services</h2>
      <div class="services-list">
        <div class="facials">
          <h3>Hair Styling</h3>
          <p>
            Get a trendy haircut or a stylish blow-dry to enhance your look.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Makeup</h3>
          <p>
            Professional makeup services for weddings, parties, and special
            occasions.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Facials</h3>
          <p>
            Rejuvenate your skin with our range of relaxing and nourishing
            facials.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Nail Art</h3>
          <p>
            Creative and beautiful nail art designs to complement your style.
          </p>
          <button>learn more</button>
        </div>
        <div class="facials">
          <h3>Massage Therapy</h3>
          <p>Relax and unwind with our therapeutic massage sessions.</p>
          <button>learn more</button>
        </div>
      </div>
    </section>

    <section>
      <div class="gallery">
        <div>
          <img src="./images/pic9.jpg" alt="" />
          <h3>kesh 1500</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic8.jpg" alt="" />
          <h3>kesh2000</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic7.jpg" alt="" />
          <h3>kesh800</h3>
          <button type="submit">Book</button>
        </div>
        <div>
          <img src="./images/pic6.jpg" alt="" />
          <h3>kesh1500</h3>
          <button type="submit">Book</button>
        </div>
      </div>
    </section>

    <section class="general">
      <h1>How it Works</h1>
      <div class="it-works">
        <div class="try-on">
          <img src="./images/serricon.webp" alt="" />
          <p>1 Select Service</p>
        </div>
        <div class="arrow-icon">
          <img src="images/arrrow-removebg-preview.png" alt="" />
        </div>
        <div class="try-on">
          <img src="./images/style.png" alt="" />
          <p>2 Choose Stylist</p>
        </div>
        <div class="arrow-icon">
          <img src="images/arrrow-removebg-preview.png" alt="" />
        </div>
        <div class="try-on">
          <img src="./images/calendar icon.png" alt="" />
          <p>3 Pick Date&Time</p>
        </div>
        <div class="arrow-icon">
          <img src="images/arrrow-removebg-preview.png" alt="" />
        </div>
        <div class="try-on">
          <img src="./images/tickicon.webp" alt="" />
          <p>4 Confirm Booking</p>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer>
      <div>
        <p>Special Offer <span>20% Off Your First Visit</span></p>
        <button>Book Now</button>
        <%- include("footer") %>
      </div>
    </footer>

    <script src="js/script.js"></script>
  </body>
</html>
