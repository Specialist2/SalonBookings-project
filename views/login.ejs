<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login page</title>
    <link rel="stylesheet" href="css/main.css" />
  </head>

  <body class="login-body">
    <%- include("header.ejs") %>
    <form action="http://localhost:8000/login" method="POST">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required /><br />
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required /><br />
      <button type="submit">Login</button>
      <span>
        <a href="#" id="forgotPasswordLink">Forgot password?</a>
      </span>

      <p>Don't have an account? <a href="/register">Register</a></p>
    </form>

    <!-- Forgot Password Form -->
    <div id="forgotPasswordForm" style="display: none; margin-top: 15px">
      <h3>Reset Password</h3>
      <label for="resetEmail">Enter your email:</label><br />
      <input type="email" id="resetEmail" required /><br /><br />
      <button type="button" onclick="handleReset()">Send Reset Link</button>
      <button type="button" onclick="hideReset()">Back to Login</button>
    </div>

    <style>
      .login-body {
        display: block;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0;
      }

      form {
        width: 300px;
        display: flex;
        flex-direction: column;
        margin: auto;
        margin-top: 40px;
        gap: 10px;
        padding: 20px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      label {
        font-weight: bold;
      }

      input {
        padding: 10px;
        border: 1px solid #000000;
        border-radius: 5px;
      }

      button {
        padding: 10px;
        background-color: #df4578;
        color: rgb(251, 246, 246);
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      button:hover {
        background-color: #c0392b;
      }

      a {
        text-decoration: none;
        color: #007bff;
      }

      a:hover {
        text-decoration: underline;
      }

      .user-info {
        position: absolute;
        top: 10px;
        right: 10px;
      }

      form a {
        text-decoration: none;
        display: flex;
        flex-wrap: nowrap;
        color: #007bff;
        margin-right: 80px;
      }
    </style>

    <script>
      const forgotLink = document.getElementById("forgotPasswordLink");
      const forgotForm = document.getElementById("forgotPasswordForm");

      // Show forgot password form when link is clicked
      forgotLink.addEventListener("click", function (event) {
        event.preventDefault();
        forgotForm.style.display = "block"; // show the reset form
      });

      // Hide the forgot password form and return to login form
      function hideReset() {
        forgotForm.style.display = "none"; // hide the reset form
      }

      // Simulate sending reset link (you can replace this with an actual backend call)
      function handleReset() {
        const email = document.getElementById("resetEmail").value;
        if (email) {
          alert("Reset link sent to " + email); // Simulated reset
          hideReset(); // Hide form after sending link
        } else {
          alert("Please enter an email address.");
        }
      }
    </script>
  </body>
  <%- include("footer") %>

</html>

