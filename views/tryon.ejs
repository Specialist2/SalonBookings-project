<section class="tryon-ai-section">
  <h2>Try On a New Look with AI</h2>
  <p>
    Curious how a new style would look on you? Upload your photo and let our AI
    generate a random hairstyle or makeup look!
  </p>
  <form
    id="aiTryOnForm"
    enctype="multipart/form-data"
    method="POST"
    action="/ai-tryon"
  >
    <input type="file" name="photo" accept="image/*" capture="user" required />
    <button type="submit">Generate AI Style</button>
  </form>
  <div id="aiTryOnResult">
    <% if (typeof aiResultUrl !== 'undefined') { %>
    <h3>Your AI-Generated Style:</h3>
    <img
      src="<%= aiResultUrl %>"
      alt="AI Style Result"
      style="max-width: 300px; width: 100%; border-radius: 8px; margin-top: 1em"
    />
    <% } %>
  </div>
  <style>
    .tryon-ai-section {
      background: #f9f6fb;
      border-radius: 12px;
      padding: 2em 1em;
      margin: 2em auto;
      max-width: 500px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      text-align: center;
    }
    .tryon-ai-section h2 {
      color: #e75480;
      margin-bottom: 0.5em;
    }
    .tryon-ai-section form {
      margin: 1.5em 0;
    }
    .tryon-ai-section input[type="file"] {
      margin-bottom: 1em;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    .tryon-ai-section button[type="submit"] {
      background: #a45ee5;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 0.7em 1.5em;
      font-size: 1em;
      cursor: pointer;
      transition: background 0.2s;
    }
    .tryon-ai-section button[type="submit"]:hover {
      background: #7d3fc2;
    }
    #aiTryOnResult {
      margin-top: 1.5em;
    }
    #aiTryOnResult img {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }
    @media (max-width: 600px) {
      .tryon-ai-section {
        padding: 1.5em 1em;
      }
      .tryon-ai-section h2 {
        font-size: 1.3em;
      }
      .tryon-ai-section button[type="submit"] {
        width: 100%;
      }
    }
  </style>
</section>

